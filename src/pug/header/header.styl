//                 font-size 16px !important         
@media(min-width 1200px)
    .header 
        .container
            width 1150px
    .header__toggle
        display none
    .header        
        &__block
            float left    
        .header-mob__hide
            float right 
            display block
            padding-left 40px
        &__mob-icon
            display none    
        &__logo-wrapper 
            left 15px
            transform translateX(0)
  
        &__link
            font-size: 17px !important
            font-weight: 400;
            color: rgba(198,175,185, 1);
            padding-left 20px
            float left
            text-decoration none
            text-shadow 1px 1px 1px white
            
            &:hover
                color: #000;
            &:focus
                color: #000;
            &:active
                color: #000;        
                    
           
        &__link:first-child 
            padding-left 10px
